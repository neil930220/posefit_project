{
  "dataset_root": "./data/FoodSeg103",
  "annotation_dir": "./data/annotations",
  "output_dir": "./checkpoints",
  "model_name": "resnet50_attention",
  "num_classes": 103,
  "pretrained": true,
  "dropout": 0.3,
  "epochs": 100,
  "batch_size": 32,
  "image_size": 224,
  "num_workers": 4,
  "optimizer": "adamw",
  "lr": 0.0003,
  "max_lr": 0.001,
  "weight_decay": 0.05,
  "scheduler": "onecycle",
  "step_size": 10,
  "warmup_epochs": 5,
  "grad_accum_steps": 2,
  "grad_clip": 1.0,
  "loss": "asymmetric",
  "use_pos_weight": true,
  "focal_alpha": 1.0,
  "focal_gamma": 2.0,
  "asym_gamma_pos": 0.0,
  "asym_gamma_neg": 4.0,
  "asym_clip": 0.05,
  "hill_lambda": 1.5,
  "use_randaugment": true,
  "mixup_alpha": 0.2,
  "cutmix_alpha": 1.0,
  "progressive_resize": false,
  "progressive_resize_epoch": 30,
  "progressive_resize_size": 384,
  "use_ema": true,
  "ema_decay": 0.999,
  "amp": true,
  "metric_threshold": 0.5,
  "seed": 42,
  "resume": null,
  "early_stopping": 15
}